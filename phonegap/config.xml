<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.phonegap.kitchensink"
    version   = "2.1.0">

    <name>15-237 Cordova Kitchen Sink</name>

    <description>
        15-237 Cordova Kitchen Sink Demo
    </description>

